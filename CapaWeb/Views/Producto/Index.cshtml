
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {
    <link href="~/lib/datatables2/css/datatables.datatables.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
}
<h2 class="mt-4 mb-4">Productos</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-bar me-1"></i>
                Lista de Productos
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <button class="btn btn-outline-success" id="btnNuevo"><i class="fas fa-user-plus me-1"></i>Nuevo Producto</button>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <table class="display" id="tbData" cellspacing="0" style="width:100%">
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="mdData" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Productos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="row">
                            <div class="col-sm-8">
                                <label class="col-form-label">Nombre:</label>
                                <input type="text" class="form-control form-control-sm" id="txtNombre" autocomplete="off">
                            </div>
                            <div class="col-sm-4">
                                <label class="col-form-label">Categoria:</label>
                                <select id="cboCategoria" class="form-control form-select-sm" data-width="100%"></select>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label class="col-form-label">Descripcion</label>
                                <input type="text" class="form-control form-control-sm" id="txtDescripcion" autocomplete="off">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <label class="col-form-label">Cantidad</label>
                                <input type="number" class="form-control form-control-sm" id="txtCantidad">
                            </div>
                            <div class="col-sm-4">
                                <label class="col-form-label">Compra Bs</label>
                                <input type="number" class="form-control form-control-sm" id="txtCompra">
                            </div>
                            <div class="col-sm-4">
                                <label class="col-form-label">Venta Bs</label>
                                <input type="number" class="form-control form-control-sm" id="txtVenta">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <label for="txtImagen" class="form-label">Seleccionar imagen:</label>
                                <input class="form-control" type="file" id="txtImagen" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">

                            <div class="col-12 text-center">
                                <img id="imgProducto" src="https://joseluis1989-007-site1.ltempurl.com/Imagenes/sinimagen.png"
                                     class="img-fluid img-thumbnail" style="max-height: 200px;" alt="Vista previa">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdDataPrueba" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropPrueba" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropPrueba">Imagen Prueba</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 mb-3">
                        <label for="inputFoto" class="form-label">Seleccionar imagen:</label>
                        <input class="form-control" type="file" id="inputFoto" accept="image/*">
                    </div>

                    <div class="col-12 text-center">
                        <img id="previewFoto" src="https://images.unsplash.com/photo-1640271443625-3276ed8f62b5?w=300"
                             class="img-fluid img-thumbnail" style="max-height: 250px;" alt="Vista previa">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarImg">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables2/js/moment.min.js"></script>
    <script src="~/lib/datatables2/js/datatables.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/Views/Categoria/Productoindex.js"></script>
}